<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorTexto</item>
        <item name="buttonStyle">@style/BotonUno</item>
    </style>

    <style name="MegaTexto" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/raleway_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorMegaTexto</item>
    </style>

    <style name="BotonUno" parent="android:Widget.Button">
        <item name="android:background">@color/colorBotonFondo</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="TextoBoton" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorTextoBoton</item>
    </style>

    <!-- Se ha creado un estilo que hereda
        las caracterÃ¬sticas del tema -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
